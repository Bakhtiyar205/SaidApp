@model ProductDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <h1>Create</h1>
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" style="width:350px;">
            <span class="text-danger" asp-validation-for="Name" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="FormFile"></label>
            <input class="form-control" asp-for="FormFile" style="width:350px;">
            <span class="text-danger" asp-validation-for="FormFile" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.SelectList"></select>
            <span class="text-danger" asp-validation-for="CategoryId" type="text"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartialView" />
}

